@{ Layout = "~/Views/Shared/_LayoutLanding.cshtml";}
@model LandingLoginVM

<!-- Where all the magic happens -->
<!-- LOGIN FORM -->


@*TODO: WHY CANT YOU LOGIN IN ANYMORE??*@
<div id="swapper-other" style="display: none;">
    <div class="text-center" style="padding:50px 0">
        <div class="logo">login</div>
        <!-- Main Form -->
        <div class="login-form-1">
            <form asp-controller="landing" asp-action="login" id="login-form" class="text-left">
                <div class="login-form-main-message"></div>
                <div class="main-login-form">
                    <div class="login-group">
                        <div class="form-group">
                            <label for="lg_username" class="sr-only">Username</label>
                            <input asp-for="Username" type="text" class="form-control" placeholder="username">
                            <div class="form-group"><span asp-validation-for="Username" class="error"></span></div>
                        </div>
                        <div class="form-group">
                            <label for="lg_password" class="sr-only">Password</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="password">
                            <div class="form-group"><span asp-validation-for="Password" class="error"></span></div>
                        </div>
                        <div class="form-group login-group-checkbox">
                            <input type="checkbox" id="lg_remember" name="lg_remember">
                            <label for="lg_remember">remember me</label>
                        </div>
                    </div>
                    <button type="submit" class="login-button"><i class="fa fa-chevron-right"></i></button>
                </div>
                <div class="etc-login-form">
                    <p>forgot your password? <a href="#">click here</a></p>
                    <p>new user? <a href="javascript:SwapDivsWithClick('swapper-first','swapper-other')">create new account</a></p>
                </div>
            </form>
        </div>
        <!-- end:Main Form -->
    </div>
</div>