@model CommentListVM[]
<link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css">
<link href="~/Styles/CommentField.css" rel="stylesheet" />
<div class="container">
    <div class="row">
        @foreach (var comment in Model)
        {
            <div class="@comment.CommentId">
                <div class="col-sm-8">
                    <div class="panel panel-white post">
                        <div class="post-heading">
                            @if (comment.IsCreator)
                            {
                                <span onclick="RemoveComment(@comment.CommentId)" style="cursor:pointer; color: #27BC99; font-size: 14px; padding-left: 85%;" class="glyphicon glyphicon-remove"></span>
                            }
                            <div class="title h5" style="text-align: center">
                                <a href="#" style="display: inline-block; color: #27BC99"><b>@comment.Username</b></a>
                                left a comment
                            </div>
                            <p class="text-muted time">@comment.CreatedDate</p>
                        </div>
                        <br />
                        <div class="post-description">
                            <p>@comment.Text</p>
                            <div class="stats">
                                <a href="#" class="btn btn-default stat-item">
                                    <i class="fa fa-thumbs-up icon"></i>3
                                </a>
                                <a href="#" class="btn btn-default stat-item">
                                    <i class="fa fa-thumbs-down icon"></i>1
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>