@{ Layout = "~/Views/Shared/_LayoutLanding.cshtml";}
@model LandingProjectVM

<!-- START PROJECT FORM -->
<div id="swapper-first">
    <div style="padding-top: 50px">
        <div class="infoMessage">@Html.ValidationSummary(true)</div>
        <div class="logo">start a project</div>
        <!-- Main Form -->
        <div class="login-form-1">
            <form asp-controller="landing" asp-action="project" class="text-left">
                <div class="login-form-main-message"></div>
                <div class="main-login-form">
                    <div class="login-group">
                        <div class="form-group">
                            <label asp-for="Subject" class="sr-only">Subject</label>
                            <input asp-for="Subject" class="form-control" placeholder="subject">
                            <span asp-validation-for="Subject" class="error"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="sr-only">Description</label>
                            <input asp-for="Description" class="form-control" placeholder="description">
                            <span asp-validation-for="Description" class="error"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="GitHub" class="sr-only">GitHub</label>
                            <input asp-for="GitHub" class="form-control" placeholder="github">
                            <span asp-validation-for="GitHub" class="error"></span>
                        </div>
                        <div class="form-group">
                            <br />
                            <label asp-for="Tags" style="margin-right: 10px;">tags</label>
                            <input asp-for="Tags" id="newTag" onkeypress="return enterKeyPress(event)" class="form-control" style="width: 40%; display:inline-block" />
                            <span asp-validation-for="Tags"></span>
                            <input type="hidden" id="hiddenTags" name="newTags" />
                            <button type="button" class="btn btn-custom btn-sm" onclick="addTag()"><span class="fa fa-plus"></span></button>
                            <br />
                            <div id="tags" type="button"></div>
                        </div>
                        <div class="card-footer text-muted">
                            <button type="submit" class="login-button"><i class="fa fa-chevron-right"></i></button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <!-- end:Main Form -->
    </div>
</div>
<script src="~/assets/js/TagsController.js"></script>
