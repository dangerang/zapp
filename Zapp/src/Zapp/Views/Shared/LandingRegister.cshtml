@{ Layout = "~/Views/Shared/_LayoutLanding.cshtml";}
@model LandingRegisterVM


<!-- REGISTRATION FORM -->
<div id="swapper-first">
    <div class="text-center" style="padding:50px 0">
        <div class="infoMessage">@Html.ValidationSummary(true)</div>
        <div class="logo">register</div>
        <!-- Main Form -->
        <div class="login-form-1">
            <form asp-controller="landing" asp-action="register" class="text-left">
                <div class="login-form-main-message"></div>
                <div class="main-login-form">
                    <div class="login-group">
                        <div class="form-group">
                            <label asp-for="NewUsername" class="sr-only">Username</label>
                            <input asp-for="NewUsername" class="form-control" placeholder="username">
                            <span asp-validation-for="NewUsername" class="error"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="sr-only">E-mail</label>
                            <input asp-for="Email" class="form-control" placeholder="email">
                            <span asp-validation-for="Email" class="error"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NewPassword" class="sr-only">Password</label>
                            <input asp-for="NewPassword" class="form-control" placeholder="password">
                            <span asp-validation-for="NewPassword" class="error"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="sr-only">Password Confirm</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="confirm password">
                            <span asp-validation-for="ConfirmPassword" class="error"></span>
                        </div>
                        <div class="form-group login-group-checkbox">
                            <input type="checkbox" class="" id="reg_agree" name="reg_agree">
                            <label>i agree with <a href="#">terms and services</a></label>
                        </div>
                    </div>
                    <button type="submit" class="login-button"><i class="fa fa-chevron-right"></i></button>
                </div>
                <div class="etc-login-form">
                    <p>
                        already have an account? <a href="javascript:SwapDivsWithClick('swapper-first','swapper-other')">login here</a>
                    </p>
                </div>
            </form>
        </div>
        <!-- end:Main Form -->
    </div>
</div>